const r = require('../lib/db.js');

module.exports = () => {
  return r.tableCreate('{{pluralName}}').run()
  .catch((err) => {
    if (err.message.split('\n')[0] === 'Table `'+process.env.RETHINK_NAME+'.{{pluralName}}` already exists in:') return;
    throw err;
  })
  .then(() => {
    r.table('{{pluralName}}').wait().run()
  });
};
