{{=<% %>=}}
{
  "type": "object",
  "name": "<%camelCase%>",
  "camelCasePlural": "<%camelCasePlural%>",
  "properties": {
    "id": {
      "$ref": "#/definitions/uuid"
    },
    "rev": {
      "$ref": "#/definitions/uuid"
    },
    "name": {
      "type": "string",
      "faker": "name.findName"
    <%#isUser%>
    },
    "email": {
      "type": "string",
      "format": "email",
      "faker": "internet.exampleEmail"
    },
    "password": {
      "type": "string",
      "faker": "internet.password"
    <%/isUser%>
    <%#singularRelationships%>
    },
    "<%camelCase%>": {
      "$ref": "#/definitions/uuid"
    <%/singularRelationships%>
    <%#multiRelationships%>
    },
    "<%camelCasePlural%>": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/uuid"
      }
    <%/multiRelationships%>
    }
  },
  <%#hasRelationships%>
  "links": [
    <%#singularRelationships%>
    {
      "rel": "<%camelCase%>",
      "href": "/<%camelCasePlural%>/{<%camelCase%>}"
    }<%^isLast%>,<%/isLast%><%#isLast%><%#hasMultiRelationships%>,<%/hasMultiRelationships%><%/isLast%>
    <%/singularRelationships%>
    <%#multiRelationships%>
    {
      "rel": "<%camelCase%>",
      "href": "/<%camelCasePlural%>/{<%camelCasePlural%>[]}"
    }<%^isLast%>,<%/isLast%>
    <%/multiRelationships%>
  ],
  <%/hasRelationships%>
  <%^isUser%>
  "required": ["name"]
  <%/isUser%>
  <%#isUser%>
  "required": ["name", "email"]
  <%/isUser%>
}
